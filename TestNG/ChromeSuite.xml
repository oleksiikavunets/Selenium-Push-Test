<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Chrome Suite" parallel="tests" thread-count="1">
    <parameter name="browser" value="chrome"/>
    <listeners>
        <listener class-name="testutils.Listeners.TestRetryListener"/>
        <listener class-name="testutils.Listeners.TestNGReportListener"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
    </listeners>


    <test name="SANITY">
        <classes>
            <class name="Test_Pos_LogInLogOut"/>
            <class name="Test_Pos_Subscription"/>
        </classes>
    </test>
    <test name="BILLING PAYMENT SANITY">
        <classes>
            <class name="Test_Pos_SmokePayment"/>
        </classes>
    </test>
    <test name="MAILING TEST">
        <classes>
            <class name="Test_Pos_Registration"/>
            <class name="Test_Pos_RestorePassword"/>
            <!--<class name="Test_Pos_RegistrationEmailsMultiLanguage"/>-->
            <!--<class name="Test_Pos_RecoverPassMultiLanguage"/>-->
            <!--<class name="Test_Pos_NewSiteMailsMultiLanguage"/>-->
        </classes>
    </test>
    <test name="SEND CAMPAIGNS">
        <classes>
            <class name="Test_Pos_SendMessage"/>
            <class name="Test_Pos_SendDelayedMessage"/>
            <class name="Test_Pos_SendDelayedMessageImmediately"/>
            <class name="Test_Pos_SendDelayedMessageWithButtonsImmediately"/>
            <class name="Test_Pos_DeleteDelayedMessage"/>
            <class name="Test_Pos_EditDelayedMessage"/>
            <class name="Test_Pos_SendMessageWithTags"/>
            <class name="Test_Pos_SendMessageWithAlias"/>
            <class name="Test_Pos_SendMessageWithUTM"/>
            <class name="Test_Pos_SendMessageWithButtons"/>
            <class name="Test_Pos_SendMessageWithBigImage"/>
            <class name="Test_Pos_CopyCampaign"/>
        </classes>
    </test>
    <test name="NEGATIVE">
        <classes>
            <class name="Test_Neg_LogIn"/>
            <class name="Test_Neg_Registration"/>
            <class name="Test_Neg_RestorePassword"/>
            <class name="Test_Neg_CreateSite"/>
            <class name="Test_Neg_CreateWM"/>
            <class name="Test_Neg_SendMessage"/>
            <class name="Test_Neg_EditUTM"/>
            <class name="Test_Neg_CreateTagList"/>
        </classes>
    </test>
    <test name="ADDING AND EDITING HTTP SITE">
        <classes>
            <class name="Test_Pos_CreateHTTPSite"/>
            <class name="Test_Pos_DeleteSite"/>
            <class name="Test_Pos_CreateWM"/>
            <class name="Test_Pos_CreateWMWithButtons"/>
            <class name="Test_Pos_CreateWMWithBigImage"/>
            <class name="Test_Pos_ChangeSiteIcon"/>
            <class name="Test_Pos_EditUTM"/>
        </classes>
    </test>
    <test name="ADVANCED SETTINGS AND TARGETING">
        <classes>
            <class name="Test_Pos_AddNewTag"/>
            <class name="Test_Pos_AddNewAlias"/>
            <class name="Test_Pos_CreateTagList"/>
            <class name="Test_Pos_UseTagsInCampaignFromTagListPage"/>
        </classes>
    </test>
</suite>